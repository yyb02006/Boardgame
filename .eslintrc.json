{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"plugin:react/recommended",
		"standard-with-typescript",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"semi": true,
				"singleQuote": true,
				"useTabs": true,
				"endOfLine": "auto"
			}
		],
		"space-before-function-paren": ["error", "never"],
		"@typescript-eslint/explicit-function-return-type": "off"
	}
}
